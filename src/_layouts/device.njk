---
layout: base
style: {
    inline-layout: "
        .device-layout {
            --container-size: 84ch;
        }

        time {
            color: var(--color-text-muted);
        }
    "
}
---

<article class="device-layout container page-spacing">
    {% include "breadcrumbs.njk" %}

    <div class="mb-8 md-mb-10">
        <h1 class="my-0">{{ name }} ({{ codename }})</h1>

        <time datetime="{{ page.date | toISOString }}">
            Last update: {{ page.date | formatDate('DD MMMM YYYY') }}
        </time>
    </div>

    {% if picture %}
        <div class="float-right mx-4">
            {% image picture, name, { widths: [240] } %}
        </div>
    {% endif %}

    {{ content | safe }}
</article>

<a href="#page-main" class="skip-link">Go to main content</a>
<header class="page-header sticky top-0">
    <div class="flex justify-between items-center py-2 md-py-4 container">
        {% include "logo.njk" %}
        <div class="flex items-center">
            <nav class="hidden sm-block">
                <ul class="menu -row flex-wrap">
                {%- for entry in collections.all | eleventyNavigation %}
                    <li>
                        <a
                            href="{{ entry.url | url }}"
                            {% if entry.url == page.url %}class="is-active"{% endif %}
                            {% if entry.url == page.url %}aria-current="page"{% endif %}
                        >{{ entry.title }}</a>
                    </li>
                {%- endfor %}
                    <li class="ms-4">
                        <button class="btn -theme" onclick="document.querySelector('#download-modal').showModal()">Get Kenvyra</button>

                        <dialog id="download-modal">
                            <label for="device">Device</label>

                            <select id="device" class="mb-2">
                                <option disabled selected value>Choose a device</option>

                                {%- for device in collections.devices -%}
                                    <option value="{{ device.data.codename }}">{{ device.data.name }} ({{ device.data.codename }})</option>
                                {%- endfor -%}
                            </select>

                            <label for="flavor">Flavor</label>

                            <select id="flavor" class="mb-2">
                                <option disabled selected value>Choose a flavor</option>

                                <option value="vanilla">Vanilla</option>
                                <option value="microg">microG</option>
                                <option value="gapps">GApps</option>
                            </select>

                            <a id="download" class="btn -theme mb-2 is-disabled">Download</a>

                            <button class="btn" onclick="document.querySelector('#download-modal').close()">Close</button>
                        </dialog>
                    </li>
                </ul>
            </nav>
            <button
                id="show-offcanvas-menu"
                type="button"
                class="btn -icon ms-4 sm-hidden"
            >
                <svg width="24" height="24" fill="currentColor">
                    <title>Open menu</title>
                    <use href="/images/sprite.svg#menu" />
                </svg>
            </button>
        </div>
    </div>
</header>
{% include "offcanvas.njk" %}
